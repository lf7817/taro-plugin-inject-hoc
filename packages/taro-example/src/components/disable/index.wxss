.guide-disable {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.4);
}

.guide-disable__hidden {
  display: none;
}

.guide-disable__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 560rpx;
  height: 400rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.guide-disable__image {
  width: 208rpx;
  height: 208rpx;
  margin-bottom: 28rpx;
}

.guide-disable__text {
  color: rgba(0, 0, 0, 0.8);
  font-weight: 400;
  font-size: 28rpx;
}
